class Solution {
public:
    int strStr(string haystack, string needle) {
        //return haystack.find(needle);  //using direct find function
        int m=needle.length();
        int n=haystack.length();
        for(int i=0;i<=n-m;i++){
            int j;
            for(j=0;j<m;j++){
              if(haystack[i+j]!=needle[j])
              break;
            }
            if(j==m)
            return i;
        }
        return -1;
    }
};
